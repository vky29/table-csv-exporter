{
    "manifest_version": 3,
    "name": "Table to Excel Converter",
    "version": "1.0",
    "description": "Convert HTML tables to Excel using XPath.",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "xlsx.full.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}